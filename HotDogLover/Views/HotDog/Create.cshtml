@model HotDogLover.Models.HotDog.HotDogCreateViewModel
@{
    ViewBag.Title = "Update";
}



<h2>Add Hot Dog</h2>
<hr />
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-2 required" })
            <div class="col-md-3">
                @Html.TextBoxFor(m => m.Name, new { htmlAttributes = new { @class = "form-control required" } })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Date, new { @class = "control-label col-md-2 required" })
            <div class="col-md-3">
                @Html.EditorFor(m => m.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.ProfileId)

    <div class="form-group">
        <div class="col-md-offset-2">
            <input type="submit" value="Save & Return" class="btn btn-primary" />
        </div>
    </div>
}

