@model HotDogLover.Models.Profile.ProfileCreateViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Hot Dog Lover Profile</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-2 required" })
            <div class="col-md-6">
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control required" } })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = "control-label col-md-2 required" })
            <div class="col-md-6">
                @Html.TextAreaFor(m => m.Description, new { @cols = 75, @rows = 9, @class = "form-control required" })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FavoriteDog.Name, new { @class = "control-label col-md-2 required" })
            <div class="col-md-6">
                @Html.EditorFor(m => m.FavoriteDog.Name, new { htmlAttributes = new { @class = "form-control required" } })
                @Html.ValidationMessageFor(m => m.FavoriteDog.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FavoriteDog.Date, new { @class = "control-label col-md-2 required" })
            <div class="col-md-6">
                @Html.EditorFor(m => m.FavoriteDog.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.FavoriteDog.Date, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastAte, new { @class = "control-label col-md-2 required" })
            <div class="col-md-6">
                @Html.EditorFor(m => m.LastAte, new { htmlAttributes = new { @class = "form-control required" } })
                @Html.ValidationMessageFor(m => m.LastAte, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2">
            <input type="submit" value="Save & Return" class="btn btn-primary" />
        </div>
    </div>
}